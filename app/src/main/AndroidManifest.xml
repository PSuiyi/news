            android:name=".ui.login.PsdSettingAct"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.login.RegisterAct"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.login.PsdAuthAct"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.picture.PictureDetailAct"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".ui.picture.CommentListAct"
            android:screenOrientation="portrait"
            android:theme="@style/DialogActStyle" />
        <activity
            android:name=".ui.home.TypeListAct"
