            android:name=".ui.setting.SettingAct"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.video.VideoDetailAct"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
