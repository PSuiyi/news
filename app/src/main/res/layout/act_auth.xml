<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_common_navigation" />

    <include layout="@layout/include_common_remind" />

    <include layout="@layout/include_common_network_status" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/distance_view_larger">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_edit"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/distance_view"
                android:paddingRight="@dimen/distance_view">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shouji" />

                <com.znz.compass.znzlibray.views.EditTextWithDel
                    android:id="@+id/etUserName"
                    style="@style/EditPhoneStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="手机号"
                    android:paddingBottom="@dimen/distance_divider"
                    android:paddingLeft="5dp"
                    android:paddingRight="@dimen/distance_view"
                    android:paddingTop="@dimen/distance_divider"
                    android:textSize="@dimen/title_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_view"
                android:layout_weight="1"
                android:background="@drawable/bg_edit"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/distance_view"
                android:paddingRight="@dimen/distance_view">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/yanzhengma" />

                <com.znz.compass.znzlibray.views.EditTextWithDel
                    android:id="@+id/etPsd"
                    style="@style/EditPasswordStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="验证码"
                    android:paddingBottom="@dimen/distance_divider"
                    android:paddingLeft="5dp"
                    android:paddingRight="@dimen/distance_view"
                    android:paddingTop="@dimen/distance_divider"
                    android:textSize="@dimen/title_size" />

                <TextView
                    android:id="@+id/tvCode"
                    style="@style/TitleRedTextStyle"
                    android:text="获取验证码" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvSubmit"
            style="@style/BtnStyle"
            android:layout_marginTop="@dimen/distance_view"
            android:text="下一步"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>