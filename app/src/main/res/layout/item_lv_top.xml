<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:padding="@dimen/distance_view">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TitleTextStyle"
                android:maxLines="2"
                android:text="吊车很忙，亮出北京“城市天际线”，那些招牌算是彻底没了。" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_divider"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextRedStyle"
                    android:layout_marginRight="@dimen/distance_divider"
                    android:background="@drawable/bg_red_boder"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:text="置顶"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvCountComment"
                    style="@style/TextDrawableStyle"
                    android:drawableLeft="@mipmap/pinglun"
                    android:text="0"
                    android:textSize="@dimen/text_small_size" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View style="@style/Line" />
</LinearLayout>