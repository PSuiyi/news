<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/distance_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleTextStyle"
                    android:layout_marginRight="@dimen/distance_view"
                    android:background="@mipmap/hong"
                    android:gravity="center"
                    android:text="情感" />

                <TextView
                    style="@style/TitleTextStyle"
                    android:text="分类简介分类简介分类简介分类简介" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/Line" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/distance_divider"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="@dimen/distance_divider" />

    </LinearLayout>

    <View style="@style/LineDivider" />
</LinearLayout>