<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/distance_divider"
        android:paddingLeft="@dimen/distance_view"
        android:paddingRight="@dimen/distance_view"
        android:paddingTop="@dimen/distance_divider">

        <EditText
            android:id="@+id/etComment"
            style="@style/EditSingleStyle"
            android:layout_weight="1"
            android:background="@drawable/bg_comment_white"
            android:drawableLeft="@mipmap/xiepinglunhei"
            android:drawablePadding="@dimen/distance_divider"
            android:gravity="center_vertical"
            android:hint="写评论..."
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/distance_view"
            android:paddingRight="@dimen/distance_view"
            android:paddingTop="4dp"
            android:textSize="20sp" />

        <FrameLayout
            android:id="@+id/flComment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/distance_view">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/pinglunhei" />

            <TextView
                android:id="@+id/tvCountComment"
                style="@style/DotStyle"
                android:layout_marginLeft="20dp"
                android:text="0" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/flView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/liulanhei" />

            <TextView
                android:id="@+id/tvCountView"
                style="@style/DotStyle"
                android:layout_marginLeft="20dp"
                android:text="0" />
        </FrameLayout>

        <ImageView
            android:id="@+id/ivFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/shoucanghei" />
    </LinearLayout>

</LinearLayout>