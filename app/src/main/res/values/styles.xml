<resources>

    <style name="AppSplash" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/spalsh</item>
    </style>

    <!--卡片风格-->
    <style name="CardStyle">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="LineVerGreen">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="BtnStyle" parent="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/red</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/distance_divider</item>
        <item name="android:paddingBottom">@dimen/distance_divider</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="DotStyle" parent="TextWhiteStyle">
        <item name="android:layout_gravity">right|top</item>
        <item name="android:background">@drawable/bg_dot</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogActStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Anim_scale</item>
    </style>


    <style name="Anim_scale" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>
</resources>
