<resources>
    <style name="AppSplash" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/spalsh</item>
    </style>

    <!--卡片风格-->
    <style name="CardStyle">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="LineVerGreen">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="BtnStyle" parent="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/red</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/distance_view</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>
</resources>
