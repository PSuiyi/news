<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="@color/gray20"
                android:startColor="@color/gray20" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/gray10"
                    android:startColor="@color/gray10" />
            </shape>
        </clip>
    </item>
</layer-list>